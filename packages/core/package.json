{
  "name": "@clawsentinel/core",
  "version": "0.7.0",
  "description": "Shared types, event bus, SQLite schema and logger for ClawSentinel",
  "license": "Elastic-2.0",
  "author": "hshdevhub",
  "homepage": "https://clawsentinel.sh",
  "repository": {
    "type": "git",
    "url": "https://github.com/hshdevhub/clawsentinel.git",
    "directory": "packages/core"
  },
  "keywords": [
    "clawsentinel",
    "openclaw",
    "ai-security",
    "prompt-injection",
    "llm-security"
  ],
  "engines": {
    "node": ">=20.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./types/*": {
      "import": "./dist/types/*.js",
      "require": "./dist/types/*.cjs",
      "types": "./dist/types/*.d.ts"
    }
  },
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts --clean",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "test": "vitest run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "better-sqlite3": "^9.4.0",
    "winston": "^3.12.0",
    "zod": "^3.22.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.0",
    "typescript": "^5.4.0",
    "tsup": "^8.0.0",
    "vitest": "^1.4.0"
  }
}
